{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "lib": [
        "es2017",
        "dom",
        "scripthost"
    ],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
    }
},

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
